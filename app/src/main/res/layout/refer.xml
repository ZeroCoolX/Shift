<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@drawable/levels_background">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="7">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@drawable/previous"/>
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/header_textsize"
            android:textColor="@color/lt_tan"
            android:textStyle="bold"
            android:text="@string/refer_a_friend"
            android:layout_height="match_parent"
            android:layout_weight="70"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center"
        android:layout_weight="75">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="15"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="@dimen/refer_textsize"
                android:textColor="@color/etch"
                android:textStyle="bold"
                android:text="@string/refer_a_friend_explain"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="100"
                android:layout_weight="10">
                <EditText
                    android:id="@+id/friends_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:hint="@string/friends_email"
                    android:textColorHint="@color/dk_tan"
                    android:textSize="@dimen/refer_textsize"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:lines="1"
                    android:textColor="@color/gold"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:background="@drawable/edit_text" />
                <Button
                    android:id="@+id/refer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="@string/refer"
                    android:lines="1"
                    android:textColor="@color/etch"
                    android:textSize="@dimen/refer_textsize"
                    android:background="@drawable/button"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/separator"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="@dimen/refer_textsize"
                android:textColor="@color/etch"
                android:textStyle="bold"
                android:text="@string/refer_a_friend_benefits"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_weight="30">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:textSize="@dimen/refer_textsize"
                        android:textStyle="bold"
                        android:textColor="@color/etch"
                        android:text="@string/you_get"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/button"
                        android:text="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/etch"
                        android:textStyle="bold"
                        android:textSize="@dimen/refer_textsize"
                        android:drawableRight="@drawable/gold"
                        android:paddingLeft="@dimen/refer_paddingleft"
                        android:paddingRight="@dimen/refer_paddingright"
                        android:layout_weight="50"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="49.5"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:textSize="@dimen/refer_textsize"
                        android:textStyle="bold"
                        android:textColor="@color/etch"
                        android:text="@string/they_get"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/button"
                        android:text="500"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/etch"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/refer_paddingleft"
                        android:textSize="@dimen/refer_textsize"
                        android:drawableRight="@drawable/silver"
                        android:paddingRight="@dimen/refer_paddingright"
                        android:layout_weight="50"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>