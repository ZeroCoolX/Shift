<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:background="@drawable/dialog_background"
    android:layout_height="match_parent">
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_weight="74">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="@string/limited_time_offer"
            android:textSize="@dimen/unlock_pack_button_textsize"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/lt_tan"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_margin="@dimen/unlock_pack_margin"
            android:layout_weight="70">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="vertical"
                android:background="@drawable/unlock_packs_square"
                android:weightSum="100">
                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/pro_bundle_message"
                    android:padding="@dimen/store_dialog_padding"
                    android:textSize="@dimen/store_dialog_textsize"
                    android:textColor="@color/lt_tan"
                    android:layout_weight="70" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/no_ads"
                        android:gravity="center"
                        android:textSize="@dimen/unlock_pack_button_textsize"
                        android:textStyle="bold"
                        android:textColor="@color/store_icon"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                android:background="@drawable/unlock_packs_item"
                android:layout_weight="20">
                <TextView
                    android:id="@+id/button_message"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textSize="@dimen/unlock_pack_textview_textsize"
                    android:text="@string/get_speed_boost"
                    android:textColor="@color/lt_tan"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"/>
                    <Button
                        android:id="@+id/to_store"
                        android:layout_width="match_parent"
                        android:layout_weight="70"
                        android:gravity="center"
                        android:text="@string/go"
                        android:textStyle="bold"
                        android:textSize="@dimen/unlock_pack_button_textsize"
                        android:textColor="@color/etch"
                        android:background="@drawable/button"
                        android:layout_height="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="center"
            android:layout_weight="12">
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:textSize="@dimen/unlock_pack_button_textsize"
                android:textStyle="bold"
                android:textColor="@color/etch"
                android:background="@drawable/button"
                android:layout_weight="60" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"/>
</LinearLayout>