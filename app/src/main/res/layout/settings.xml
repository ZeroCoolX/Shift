<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levels_background"
    android:weightSum="100">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="7">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@drawable/previous"/>
        <TextView
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/header_textsize"
            android:textColor="@color/lt_tan"
            android:textStyle="bold"
            android:text="@string/settings"
            android:layout_height="match_parent"
            android:layout_weight="70"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:weightSum="100"
        android:layout_height="0dp">
        <CheckBox
            android:id="@+id/mute_sounds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/settings_checkbox_textsize"
            android:textColor="@color/etch"
            android:layout_weight="55"
            android:button="@drawable/checkbox"
            android:layout_gravity="center"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/mute_sounds"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:weightSum="100"
        android:layout_height="0dp">
        <CheckBox
            android:id="@+id/mute_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/settings_checkbox_textsize"
            android:textColor="@color/etch"
            android:layout_weight="55"
            android:button="@drawable/checkbox"
            android:layout_gravity="center"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/mute_music"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_weight="1">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/separator"
            android:layout_weight="80"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">
        <Button
            android:id="@+id/change_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/change_password"
            android:textSize="@dimen/settings_textsize"
            android:textColor="@color/etch"
            android:textStyle="bold"
            android:layout_weight="60"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">
</LinearLayout>

</LinearLayout>